<header class="navbar navbar-fixed-top navbar-dar" style="background-color: #50aba9;">
  <div class="container">
    <%= link_to "Band app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path, class: "menu" do %>
          <%= fa_icon("home lg", text: "Home") %>
          <% end %>
        </li>
        <% if logged_in? %>
          <li>
            <%= link_to new_post_path, class: "menu" do %>
            <%= fa_icon("comment lg", text: "Post") %>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle menu" data-toggle="dropdown">
              <%= fa_icon("bars lg icon") %>Menu<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to users_path, class: "menu" do %>
                <%= fa_icon("users lg", text: "Users") %>
                <% end %>
              </li>
              <li>
                <%= link_to current_user, class: "menu" do %>
                <%= fa_icon("file lg", text: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(@current_user), class: "menu" do %>
                <%= fa_icon("edit lg", text: "User-edit") %>
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, class: "menu", method: :delete do %>
                <%= fa_icon("door-open lg", text: "Log out") %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path, class: "menu" do %>
            <%= fa_icon("door lg", text: "Log in") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>