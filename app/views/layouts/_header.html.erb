<header class="navbar navbar-fixed-top navbar-dar" style="background-color: #50aba9;">
  <div class="container">
    <%= link_to "Band app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path do %>
          <%= fa_icon("home lg icon") %>Home
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= fa_icon("bars lg icon") %>Menu<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to users_path do %>
                <%= fa_icon("bars lg icon") %>Users
                <% end %>
              </li>
              <li>
                <%= link_to current_user do %>
                <%= fa_icon("bars lg icon") %>Profile
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                <%= fa_icon("bars lg icon") %>Profile edit
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                <%= fa_icon("bars lg icon") %>Log out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path do %>
            <%= fa_icon("home lg icon") %>Log in
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>