<% provide(:title, "New post" ) %>
<% provide(:url, posts_path ) %>
<% provide(:button_text, "Post!" ) %>

<div class="row"> 
  <div class="col-md-6 col-md-offset-3"> 
        <%= form_for(@post, url: yield(:url)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>
      
      <%= f.label :genre %>
      <%= f.text_field :genre, class: 'form-control' %>
      
      <%= f.label :part %>
      <%= f.text_field :part, class: 'form-control' %>
      
      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control' %>
      
      <%= f.label :gender %>
      <%= f.text_field :gender, class: 'form-control' %>
      
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
